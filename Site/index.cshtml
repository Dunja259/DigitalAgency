
@{
    ViewBag.Title = "Digital Marketing Agency";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@section naslov {Home}

<section class="hero hero-bg d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-md-10 col-12 d-flex flex-column justify-content-center align-items-center">
                <div class="hero-text">

                    <h1 class="text-white" data-aos="fade-up">@ViewBag.naslov</h1>
                    <h1 class="text-black" data-aos="fade-up">@ViewBag.tekst</h1>
                    <br>
                    <p><a href="Work" id="button">What do we do?</a></p>

                    <strong class="d-block py-3 pl-5 text-white" data-aos="fade-up" data-aos-delay="200"><i class="fa fa-phone mr-2"></i> +99 080 070 4224</strong>
                </div>
            </div>

            <div class="col-lg-6 col-12">
                <div class="hero-image" data-aos="fade-up" data-aos-delay="300">

                    <img src="~/Images/working-girl.png" class="img-fluid" alt="working girl">
                </div>
            </div>

        </div>
    </div>
</section>


