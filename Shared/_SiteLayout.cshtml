<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" type="image/x-icon" href="~/faviconSite .ico" />
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="index">
                    <i class="fa fa-line-chart"></i>
                    @RenderSection("naslov", false)
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item" style="font-size:20px">
                            <a class="nav-link smoothScroll">@Html.ActionLink("Home", "Index", "Site")</a>
                        </li>
                        <li class="nav-item" style="font-size:20px">
                            <a class="nav-link smoothScroll">@Html.ActionLink("About us", "About", "Site")</a>
                        </li>
                        <li class="nav-item" style="font-size:20px">
                            <a class="nav-link smoothScroll">@Html.ActionLink("Contact", "Contact", "Site")</a>
                        </li>
                        <li class="nav-item" style="font-size:20px">
                            <a class="nav-link smoothScroll">@Html.ActionLink("Services", "Services", "Site")</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>


        @RenderBody()

        <footer class="site-footer">
            <div class="container">
                <div class="col-lg-5 mx-lg-auto col-md-8 col-10">
                    <h1 class="text-white" data-aos="fade-up" data-aos-delay="100">We make creative <strong>brands</strong> only.</h1>
                </div>

                <div class="col-lg-3 col-md-6 col-12" data-aos="fade-up" data-aos-delay="200">
                    <h4 class="my-4">Contact Info</h4>

                    <p class="mb-1">
                        <i class="fa fa-phone mr-2 footer-icon"></i>
                        +99 080 070 4224
                    </p>

                    <p>
                        <a href="#">
                            <i class="fa fa-envelope mr-2 footer-icon"></i>
                            hello@company.com
                        </a>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6 col-12" data-aos="fade-up" data-aos-delay="300">
                    <h4 class="my-4">Our Studio</h4>

                    <p class="mb-1">
                        <i class="fa fa-home mr-2 footer-icon"></i>
                        Av. Lúcio Costa - Barra da Tijuca, Rio de Janeiro - RJ, Brazil
                    </p>
                </div>

            </div>
         </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/scripts")
</body>
</html>
